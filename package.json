{
  "private": true,
  "scripts": {
    "script": "ts-node scripts",
    "precodegen": "rimraf src/generated src/mappings/feeds/*.ts && yarn script graphgen",
    "codegen": "graph codegen subgraph.yaml --output-dir src/generated",
    "postcodegen": "yarn script flatten",
    "create": "graph create melonproject/chainlink-dev --node http://localhost:8020",
    "predeploy": "yarn create || true",
    "deploy": "graph deploy melonproject/chainlink-dev subgraph.yaml --ipfs http://localhost:5001 --node http://localhost:8020",
    "release": "graph deploy melonproject/chainlink-dev --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "format": "prettier --write {src,scripts}/{*,**/*}.{ts,json,yaml}",
    "lint": "yarn prettier --list-different {src,scripts}/{*,**/*}.{ts,json,yaml}"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.0.10",
    "@graphprotocol/graph-cli": "^0.18.0",
    "@graphprotocol/graph-ts": "^0.18.1",
    "@types/mustache": "^4.0.1",
    "@types/node": "^14.11.2",
    "@types/prettier": "^2.1.1",
    "@types/rimraf": "^3.0.0",
    "@types/yargs": "^15.0.7",
    "assemblyscript": "^0.14.12",
    "glob": "^7.1.6",
    "jest": "^26.4.2",
    "mustache": "^4.0.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "yargs": "^16.0.3"
  }
}
